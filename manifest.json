{
    "manifest_version": 2,

    "name": "Validador WebTv",
    "description": "Verifica e valida informações do token de acesso do WebTV.",

    "version": "1.0.0",

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "externally_connectable": {
        "matches": ["*://localhost/*", "*://wtv.lrbtecnologia.com/*"]
    },

    "icons": {
        "16": "extentionAssets/icon-16x16.jpeg",
        "128": "extentionAssets/icon-128x128.jpeg"
    },

    "permissions": [
        "serial"
    ]

}